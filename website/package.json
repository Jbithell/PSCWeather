    "@mantine/hooks": "^7.17.8",
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@tabler/icons-react": "^3.26.0",
    "dayjs": "^1.11.13",
    "drizzle-orm": "~0.44.4",
    "drizzle-zod": "^0.7.0",
    "isbot": "^5.1.29",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
